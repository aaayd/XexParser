<Window x:Class="XexTool.Views.ResourceSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XexTool"
        xmlns:helpers="clr-namespace:XexTool.Helpers"
        xmlns:converters="clr-namespace:XexTool.Converters"
        mc:Ignorable="d"
        Title="Select Resource to Export"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="600"
        ShowInTaskbar="False">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Select Resource"
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Choose the image or resource you want to export"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource SecondaryDarkBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <ListBox x:Name="lstResources"
                         Style="{StaticResource ModernListBoxStyle}"
                         ItemContainerStyle="{StaticResource ModernListBoxItemStyle}"
                         Margin="8"
                         SelectionMode="Single"
                         SelectionChanged="lstResources_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        Background="{StaticResource BackgroundDarkerBrush}"
                                        CornerRadius="4"
                                        Margin="0,0,12,0">
                                    <Grid>
                                        <TextBlock x:Name="fallbackIcon"
                                                   Text="IMG"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextDisabledBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding HasNoThumbnail, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}"/>

                                        <Image Source="{Binding Thumbnail}"
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{StaticResource PrimaryDarkBrush}"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,4,6,0">
                                            <TextBlock Text="{Binding Type}"
                                                       Foreground="{StaticResource PrimaryLightBrush}"
                                                       FontSize="10"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text="{Binding SizeDisplay}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Preview Panel -->
            <Border Grid.Column="2"
                    Background="{StaticResource SecondaryDarkBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <!-- No Selection State -->
                    <StackPanel x:Name="noSelectionPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="No Preview"
                                   FontSize="14"
                                   Foreground="{StaticResource TextDisabledBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a resource to preview"
                                   FontSize="11"
                                   Foreground="{StaticResource TextDisabledBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Preview Content -->
                    <Grid x:Name="previewPanel" Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Header -->
                        <TextBlock Grid.Row="0"
                                   Text="PREVIEW"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"/>

                        <!-- Image Preview -->
                        <Border Grid.Row="1"
                                Background="{StaticResource BackgroundDarkerBrush}"
                                CornerRadius="4"
                                Padding="8">
                            <Grid>
                                <!-- Checkerboard background for transparency -->
                                <Border CornerRadius="2">
                                    <Border.Background>
                                        <DrawingBrush TileMode="Tile" Viewport="0,0,16,16" ViewportUnits="Absolute">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="#FF3A3A3A">
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="0,0,16,16"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                    <GeometryDrawing Brush="#FF2A2A2A">
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup>
                                                                <RectangleGeometry Rect="0,0,8,8"/>
                                                                <RectangleGeometry Rect="8,8,8,8"/>
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.Background>
                                </Border>

                                <!-- The actual image -->
                                <Image x:Name="imgPreview"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>

                                <!-- Not an image message -->
                                <StackPanel x:Name="notImagePanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Visibility="Collapsed">
                                    <Border Width="50" Height="50"
                                            Background="{StaticResource SecondaryLightBrush}"
                                            CornerRadius="25"
                                            Margin="0,0,0,12">
                                        <TextBlock Text="BIN"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Binary Data"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="lblBinarySize"
                                               FontSize="11"
                                               Foreground="{StaticResource TextDisabledBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Image Info -->
                        <StackPanel Grid.Row="2" Margin="0,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DIMENSIONS"
                                               FontSize="10"
                                               Foreground="{StaticResource TextDisabledBrush}"/>
                                    <TextBlock x:Name="lblDimensions"
                                               Text="--"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="FILE SIZE"
                                               FontSize="10"
                                               Foreground="{StaticResource TextDisabledBrush}"/>
                                    <TextBlock x:Name="lblFileSize"
                                               Text="--"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    Width="100"
                    Margin="0,0,8,0"/>
            <Button x:Name="btnExport"
                    Content="Export"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="ExportButton_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
